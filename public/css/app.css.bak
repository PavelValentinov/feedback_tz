body {
	font-family: 'Montserrat', sans-serif;
    font-size: 14px;
	margin: 0px;
    background: url("https://img4.goodfon.ru/original/1920x1080/2/d8/abstraktsiia-geometriia-oboi-white-green-blue-squares-abstra.jpg") center top no-repeat;
	color: #002c54;
}
.header{
	background: #3ca0fe;
    width: 100%;
    height: auto;
    margin-bottom: 35px;	
}
.main-menu a{
	color: white;
    text-decoration: none;
}
.main-menu{
	margin: 0px;
	list-style: none;
    display: flex;
}
.main-menu a:hover{
	color: #f0f9ff;
}
.menu-itemm{
	margin: 20px;
}
.href-button {
  text-decoration: none;
  display: inline-block;
  color: white;
  padding: 20px 30px;
  margin: 10px 20px;
  border-radius: 10px;
  text-transform: uppercase;
  letter-spacing: 2px;
  background: #4a90e8;
  background-size: 200% auto;
  box-shadow: 0 0 20px rgba(0, 0, 0, .1);
  transition: .5s;
}
.href-button:hover {
  transition: .3s;
  background: #2eb7ab;
}

.form-wrapper {
    box-sizing: border-box;
    width: 100%;
    max-width: 460px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(251, 251, 251, 0.2);
    padding: 30px;
    border-radius: 5px;
}

.contact-form {
    box-sizing: border-box;
    width: 100%;
    max-width: 400px;
    background: #fff;
    padding: 0 30px 30px;
    box-shadow: 0 3px 35px rgba(0, 0, 0, .1);
    border-radius: 2px;
}

.contact-form__title {
    box-sizing: border-box;
    margin: 0 -30px 30px;
    padding: 15px 30px;
    width: calc(100% + 60px);
    line-height: 1.5;
    text-align: center;
    font-size: 20px;
    font-weight: 700;
    text-transform: uppercase;
    background: #4a90e8;
    color: #fff;
}

.contact-form__description {
    display: none;
    text-align: center;
    font-size: 18px;
}

.contact-form__input-wrapper {
    margin-bottom: 20px;
}

.contact-form__input {
    width: 100%;
    height: 50px;
    padding: 0 15px;
    box-sizing: border-box;
    border: 1px solid #e2e2e2;
    background: #fbfbfb;
    border-radius: 5px;
    font-size: 16px;
}

.contact-form__textarea {
    width: 100%;
    padding: 10px 15px;
    box-sizing: border-box;
    border: 1px solid #e2e2e2;
    border-radius: 5px;
    font-size: 16px;
    background: #fbfbfb;
}

.contact-form__error {
    font-size: .875rem;
}

.contact-form__button {
    background: #4a90e8;
    display: flex;
    justify-content: center;
    width: 100%;
    max-width: 240px;
    margin: 30px auto 0;
    border-radius: 5px;
    height: 50px;
    color: #fff;
    text-transform: uppercase;
    font-size: 16px;
    font-weight: 700;
    border: none;
    -webkit-appearance: none;
    cursor: pointer;
    outline: none;
    transition: .3s;
    padding: 15px 0 0 0;
}

.contact-form__button:hover {
    transition: .3s;
    background: #2eb7ab;
}
.alert-danger{
	background: #ff000075;
    color: white;
    padding: 15px;
}

@media (max-width: 480px) {
    .form-wrapper {
        padding: 15px;
    }
    .contact-form {
        padding: 0 15px 15px;
    }
    .contact-form__title {
        margin: 0 -15px 30px;
        padding: 15px 30px;
        width: calc(100% + 30px);
        font-size: 18px;
    }
	.menu-itemm {
		margin: 10px;
		font-size: 14px;
}
}
